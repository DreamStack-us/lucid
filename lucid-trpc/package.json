{
  "name": "@dreamstack-us/lucid-trpc",
  "version": "0.0.1",
  "description": "tRPC connector for Lucid.js - bidirectional sync with tRPC backends",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@dreamstack-us/lucid-core": "^0.0.1"
  },
  "peerDependencies": {
    "@trpc/client": ">=10.0.0"
  },
  "devDependencies": {
    "@trpc/client": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "tsup": "^8.3.5",
    "typescript": "~5.3.3"
  },
  "keywords": [
    "lucid",
    "trpc",
    "sync",
    "offline-first",
    "local-first"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
