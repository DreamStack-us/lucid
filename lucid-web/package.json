{
  "name": "@dreamstack-us/lucid-web",
  "version": "0.0.2",
  "type": "module",
  "description": "Browser store for Lucid.js using IndexedDB via localForage",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@dreamstack-us/lucid-core": "^0.0.3",
    "localforage": "^1.10.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "~5.3.3"
  },
  "keywords": [
    "lucid",
    "localforage",
    "indexeddb",
    "offline-first",
    "web",
    "browser"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
