{
  "name": "lucid",
  "private": true,
  "version": "0.0.1",
  "description": "Lucid.js - Offline-first data layer for React Native and Web",
  "workspaces": [
    "lucid-core",
    "lucid-react",
    "lucid-react-native",
    "lucid-supabase",
    "lucid-web",
    "lucid-trpc"
  ],
  "scripts": {
    "typecheck": "bun run --filter '*' typecheck",
    "build": "bun run --cwd lucid-core build && bun run --filter '!@dreamstack-us/lucid-core' build",
    "clean": "bun run --filter '*' clean",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "tsup": "^8.3.5"
  },
  "keywords": [
    "offline-first",
    "local-first",
    "sqlite",
    "supabase",
    "trpc",
    "indexeddb",
    "sync",
    "react-native",
    "react",
    "web"
  ],
  "author": "DreamStack",
  "license": "MIT"
}
