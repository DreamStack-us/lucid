{
  "name": "@dreamstack-us/lucid-react-native",
  "version": "0.0.4",
  "type": "module",
  "description": "React Native adapter for Lucid.js - uses expo-sqlite",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@dreamstack-us/lucid-core": "^0.0.4"
  },
  "peerDependencies": {
    "expo-sqlite": ">=15.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "~5.3.3"
  },
  "keywords": [
    "lucid",
    "react-native",
    "expo",
    "sqlite",
    "offline-first"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
