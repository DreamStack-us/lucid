{
  "name": "@dreamstack-us/lucid-react",
  "version": "0.0.4",
  "type": "module",
  "description": "React hooks for Lucid.js - useLucid, useLucidQuery, etc.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@dreamstack-us/lucid-core": "^0.0.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "~5.3.3"
  },
  "keywords": [
    "lucid",
    "react",
    "hooks",
    "offline-first"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
